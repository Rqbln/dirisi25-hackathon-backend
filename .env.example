# Configuration pour DIRISI 2025 Hackathon Backend

# === Mode & Environnement ===
ENV=development
DEBUG=false

# === Modèle ===
# Options: rule, ml, hybrid
MODEL_MODE=rule

# === Seed pour reproductibilité ===
SEED=42

# === API Configuration ===
API_HOST=0.0.0.0
API_PORT=8080
API_RELOAD=false

# === Sécurité ===
# CORS (liste séparée par virgule, vide = désactivé)
CORS_ORIGINS=
# Rate limiting (requêtes par minute, 0 = désactivé)
RATE_LIMIT_PER_MIN=0

# === Logging ===
# Options: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
LOG_FORMAT=json

# === Data Generation (pour /v1/ingest) ===
# Nombre de sites
DEFAULT_NUM_SITES=5
# Nombre de nœuds par site
DEFAULT_NODES_PER_SITE=3
# Durée simulation (minutes)
DEFAULT_DURATION_MIN=1440
# Fréquence métriques (minutes)
DEFAULT_FREQ_MIN=1
# Taux d'incidents (probabilité par nœud par période)
DEFAULT_INCIDENT_RATE=0.01

# === Seuils Modèle (règles) ===
THRESHOLD_CPU_HIGH=0.85
THRESHOLD_MEM_HIGH=0.90
THRESHOLD_IF_UTIL_HIGH=0.80
THRESHOLD_PKT_ERR_HIGH=0.05
THRESHOLD_LATENCY_HIGH_MS=100

# === Paths ===
DATA_DIR=./data
MODELS_DIR=./models
